---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import Container from '../components/ui/Container.astro';
import CtaBanner from '../components/sections/CtaBanner.astro';
import { siteConfig } from '../data/siteConfig';
import type { Locale } from '../i18n/config';
import { t, localizeHref } from '../i18n/utils';

const locale: Locale = 'es';
---

<BaseLayout
  title={t(locale, 'contact.title')}
  description={t(locale, 'contact.metaDesc')}
  locale={locale}
>
  <Hero
    title={t(locale, 'contact.heroTitle')}
    subtitle={t(locale, 'contact.heroSubtitle')}
    compact
  />

  <section class="py-20 lg:py-28 bg-white">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Info -->
        <div data-animate>
          <span class="inline-block px-3 py-1 text-xs font-semibold uppercase tracking-wider rounded-full bg-accent-50 text-accent-600 mb-4">
            {t(locale, 'contact.infoTag')}
          </span>
          <h2 class="text-3xl sm:text-4xl font-bold text-veritiv-900 tracking-tight">
            {t(locale, 'contact.infoTitle')}
          </h2>
          <p class="mt-4 text-body-muted leading-relaxed">
            {t(locale, 'contact.infoDesc')}
          </p>

          <div class="mt-8 space-y-6">
            <!-- Phone -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-accent-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-veritiv-900">{t(locale, 'contact.phoneLabel')}</h3>
                <a href="tel:+5216631107814" class="text-body-muted hover:text-accent-500 transition-colors">
                  +52 (663) 110-7814
                </a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-accent-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-veritiv-900">{t(locale, 'contact.emailLabel')}</h3>
                <a href={`mailto:${siteConfig.email}`} class="text-body-muted hover:text-accent-500 transition-colors">
                  {siteConfig.email}
                </a>
              </div>
            </div>

            <!-- Location -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-accent-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-veritiv-900">{t(locale, 'contact.locationLabel')}</h3>
                <p class="text-body-muted">{t(locale, 'contact.tijuanaOffice')}</p>
                <p class="text-body-muted">{t(locale, 'contact.sanDiegoOffice')}</p>
              </div>
            </div>

            <!-- Hours -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-accent-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-veritiv-900">{t(locale, 'contact.hoursLabel')}</h3>
                <p class="text-body-muted">{t(locale, 'contact.hoursValue')}</p>
              </div>
            </div>
          </div>

          <!-- WhatsApp CTA -->
          <div class="mt-8 p-6 bg-accent-50 rounded-xl">
            <div class="flex items-center gap-3">
              <svg class="w-8 h-8 text-accent-500" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              <div>
                <p class="font-semibold text-veritiv-900">WhatsApp</p>
                <a href="https://wa.me/5216631107814" target="_blank" rel="noopener noreferrer" class="text-accent-600 hover:text-accent-700 font-medium">
                  {t(locale, 'whatsapp.chatWithUs')} â†’
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div data-animate>
          <div class="bg-surface-light rounded-2xl p-6 lg:p-8">
            <h3 class="text-xl font-bold text-veritiv-900 mb-2">{t(locale, 'contact.formTitle')}</h3>
            <p class="text-sm text-body-muted mb-6">{t(locale, 'contact.formSubtext')}</p>
            <form action="https://api.web3forms.com/submit" method="POST" class="space-y-4">
              <input type="hidden" name="access_key" value="YOUR_KEY" />
              <div>
                <label for="name" class="block text-sm font-medium text-veritiv-900 mb-1">{t(locale, 'contact.labelName')}</label>
                <input type="text" id="name" name="name" required placeholder={t(locale, 'contact.placeholderName')} class="w-full px-4 py-3 rounded-lg border border-veritiv-100 bg-white text-sm focus:ring-2 focus:ring-accent-500 focus:border-transparent outline-none transition-all" />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-veritiv-900 mb-1">{t(locale, 'contact.labelEmail')}</label>
                <input type="email" id="email" name="email" required placeholder={t(locale, 'contact.placeholderEmail')} class="w-full px-4 py-3 rounded-lg border border-veritiv-100 bg-white text-sm focus:ring-2 focus:ring-accent-500 focus:border-transparent outline-none transition-all" />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-veritiv-900 mb-1">{t(locale, 'contact.labelPhone')}</label>
                <input type="tel" id="phone" name="phone" placeholder={t(locale, 'contact.placeholderPhone')} class="w-full px-4 py-3 rounded-lg border border-veritiv-100 bg-white text-sm focus:ring-2 focus:ring-accent-500 focus:border-transparent outline-none transition-all" />
              </div>
              <div>
                <label for="subject" class="block text-sm font-medium text-veritiv-900 mb-1">{t(locale, 'contact.labelSubject')}</label>
                <input type="text" id="subject" name="subject" required placeholder={t(locale, 'contact.placeholderSubject')} class="w-full px-4 py-3 rounded-lg border border-veritiv-100 bg-white text-sm focus:ring-2 focus:ring-accent-500 focus:border-transparent outline-none transition-all" />
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-veritiv-900 mb-1">{t(locale, 'contact.labelMessage')}</label>
                <textarea id="message" name="message" rows="4" required placeholder={t(locale, 'contact.placeholderMessage')} class="w-full px-4 py-3 rounded-lg border border-veritiv-100 bg-white text-sm focus:ring-2 focus:ring-accent-500 focus:border-transparent outline-none transition-all resize-none"></textarea>
              </div>
              <button type="submit" class="w-full px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-lg transition-colors duration-200">
                {t(locale, 'contact.submitButton')}
              </button>
            </form>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <CtaBanner
    title={t(locale, 'contact.ctaTitle')}
    description={t(locale, 'contact.ctaDesc')}
    buttonText={t(locale, 'contact.ctaButton')}
    buttonHref={localizeHref(locale, '/audit')}
  />
</BaseLayout>
