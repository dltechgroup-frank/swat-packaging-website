---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/sections/Hero.astro';
import Container from '../../components/ui/Container.astro';
import VeritivBadge from '../../components/shared/VeritivBadge.astro';
import Timeline from '../../components/sections/Timeline.astro';
import RegionMap from '../../components/sections/RegionMap.astro';
import TrustBar from '../../components/sections/TrustBar.astro';
import CtaBanner from '../../components/sections/CtaBanner.astro';
import type { Locale } from '../../i18n/config';
import { t, localizeHref } from '../../i18n/utils';

const locale: Locale = 'en';

const aboutStats = [
  { value: t(locale, 'about.stat1Value'), suffix: t(locale, 'about.stat1Suffix'), label: t(locale, 'about.stat1Label') },
  { value: t(locale, 'about.stat2Value'), label: t(locale, 'about.stat2Label') },
  { value: t(locale, 'about.stat3Value'), suffix: t(locale, 'about.stat3Suffix'), label: t(locale, 'about.stat3Label') },
  { value: t(locale, 'about.stat4Value'), suffix: t(locale, 'about.stat4Suffix'), label: t(locale, 'about.stat4Label') },
];
---

<BaseLayout
  title={t(locale, 'about.title')}
  description={t(locale, 'about.metaDesc')}
  locale={locale}
>
  <Hero
    title={t(locale, 'about.heroTitle')}
    subtitle={t(locale, 'about.heroSubtitle')}
    compact
  />

  <section class="py-20 lg:py-28 bg-white">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div data-animate>
          <span class="inline-block px-3 py-1 text-xs font-semibold uppercase tracking-wider rounded-full bg-accent-50 text-accent-600 mb-4">
            {t(locale, 'about.storyTag')}
          </span>
          <h2 class="text-3xl sm:text-4xl font-bold text-veritiv-900 tracking-tight">
            {t(locale, 'about.storyTitle')}
          </h2>
          <div class="mt-6 space-y-4 text-body-muted leading-relaxed">
            <p>{t(locale, 'about.storyP1')}</p>
            <p>
              {t(locale, 'about.storyP2')}<strong class="text-veritiv-900">{t(locale, 'about.storyP2Bold')}</strong>
            </p>
            <p>{t(locale, 'about.storyP3')}</p>
          </div>
        </div>

        <div class="space-y-6" data-animate>
          <div class="bg-gradient-to-br from-veritiv-900 to-veritiv-700 rounded-2xl p-8 text-white">
            <div class="flex justify-center mb-6">
              <VeritivBadge light locale={locale} />
            </div>
            <p class="text-center text-veritiv-200 text-sm leading-relaxed">
              {t(locale, 'about.veritivCard')}
            </p>
          </div>

          <div class="bg-surface-light rounded-2xl p-8">
            <h3 class="font-semibold text-veritiv-900 mb-3">{t(locale, 'about.swatTitle')}</h3>
            <p class="text-sm text-body-muted leading-relaxed">
              {t(locale, 'about.swatP1')}<strong class="text-veritiv-900">{t(locale, 'about.swatP1Bold')}</strong>{t(locale, 'about.swatP1End')}
            </p>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <Timeline locale={locale} />

  <RegionMap locale={locale} />

  <TrustBar stats={aboutStats} />

  <CtaBanner
    title={t(locale, 'about.ctaTitle')}
    description={t(locale, 'about.ctaDesc')}
    buttonText={t(locale, 'about.ctaButton')}
    buttonHref={localizeHref(locale, '/audit')}
  />
</BaseLayout>
