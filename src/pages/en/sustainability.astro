---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/sections/Hero.astro';
import Container from '../../components/ui/Container.astro';
import SustainabilityCapabilities from '../../components/sections/SustainabilityCapabilities.astro';
import CtaBanner from '../../components/sections/CtaBanner.astro';
import type { Locale } from '../../i18n/config';
import { t, localizeHref } from '../../i18n/utils';

const locale: Locale = 'en';

const esgCards = [
  { n: 1, icon: 'leaf' },
  { n: 2, icon: 'recycle' },
  { n: 3, icon: 'chart' },
  { n: 4, icon: 'product' },
  { n: 5, icon: 'diversity' },
  { n: 6, icon: 'circular' },
];

const goals = [1, 2, 3, 4, 5, 6, 7, 8];
---

<BaseLayout
  title={t(locale, 'sustainability.title')}
  description={t(locale, 'sustainability.metaDesc')}
  locale={locale}
>
  <Hero
    title={t(locale, 'sustainability.heroTitle')}
    subtitle={t(locale, 'sustainability.heroSubtitle')}
    image="/images/sections/sustainability-products.jpg"
    compact
  />

  <!-- Purpose Quote -->
  <section class="py-16 bg-veritiv-900 text-white">
    <Container narrow>
      <div class="text-center" data-animate>
        <p class="text-2xl sm:text-3xl lg:text-4xl font-light italic leading-relaxed text-white/90 max-w-3xl mx-auto">
          "{t(locale, 'sustainability.purposeQuote')}"
        </p>
      </div>
    </Container>
  </section>

  <!-- ESG Initiatives -->
  <section class="py-20 lg:py-28 bg-white">
    <Container>
      <div class="text-center mb-12" data-animate>
        <span class="inline-block px-3 py-1 text-xs font-semibold uppercase tracking-wider rounded-full bg-accent-50 text-accent-600 mb-4">
          {t(locale, 'sustainability.esgTag')}
        </span>
        <h2 class="text-3xl sm:text-4xl font-bold text-veritiv-900 tracking-tight">
          {t(locale, 'sustainability.esgTitle')}
        </h2>
        <p class="mt-4 text-body-muted max-w-2xl mx-auto leading-relaxed">
          {t(locale, 'sustainability.esgSubtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {esgCards.map(({ n, icon }) => (
          <div class="bg-white rounded-xl p-6 border border-veritiv-100" data-animate>
            <div class="w-12 h-12 rounded-full bg-accent-50 flex items-center justify-center mb-4">
              {icon === 'leaf' && (
                <svg class="w-6 h-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              )}
              {icon === 'recycle' && (
                <svg class="w-6 h-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
              )}
              {icon === 'chart' && (
                <svg class="w-6 h-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              )}
              {icon === 'product' && (
                <svg class="w-6 h-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              )}
              {icon === 'diversity' && (
                <svg class="w-6 h-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {icon === 'circular' && (
                <svg class="w-6 h-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
              )}
            </div>
            <h3 class="font-semibold text-veritiv-900 mb-2">
              {t(locale, `sustainability.esg${n}Title`)}
            </h3>
            <p class="text-sm text-body-muted leading-relaxed">
              {t(locale, `sustainability.esg${n}Desc`)}
            </p>
          </div>
        ))}
      </div>
    </Container>
  </section>

  <!-- Meet Your Goals -->
  <section class="py-20 lg:py-28 bg-surface-light">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div data-animate>
          <span class="inline-block px-3 py-1 text-xs font-semibold uppercase tracking-wider rounded-full bg-accent-50 text-accent-600 mb-4">
            {t(locale, 'sustainability.goalsTag')}
          </span>
          <h2 class="text-3xl sm:text-4xl font-bold text-veritiv-900 tracking-tight">
            {t(locale, 'sustainability.goalsTitle')}
          </h2>
          <p class="mt-4 text-body-muted leading-relaxed">
            {t(locale, 'sustainability.goalsSubtitle')}
          </p>

          <ul class="mt-8 space-y-3">
            {goals.map((n) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-body-muted text-sm leading-relaxed">
                  {t(locale, `sustainability.goal${n}`)}
                </span>
              </li>
            ))}
          </ul>

          <div class="mt-8 p-4 bg-white rounded-xl border border-veritiv-100">
            <p class="text-sm text-veritiv-700 font-medium">
              {t(locale, 'sustainability.goalsEcoVadis')}
            </p>
          </div>
        </div>

        <div data-animate>
          <img
            src="/images/sections/sustainability-products.jpg"
            alt={t(locale, 'sustainability.goalsTitle')}
            class="rounded-2xl shadow-xl w-full object-cover aspect-[4/3]"
            loading="lazy"
          />
        </div>
      </div>
    </Container>
  </section>

  <SustainabilityCapabilities locale={locale} />

  <CtaBanner
    title={t(locale, 'common.ctaDefaultTitle')}
    description={t(locale, 'common.ctaDefaultDescription')}
    buttonText={t(locale, 'common.ctaDefaultButton')}
    buttonHref={localizeHref(locale, '/audit')}
  />
</BaseLayout>
