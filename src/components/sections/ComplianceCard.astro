---
import type { ComplianceTopic } from '../../data/compliance';

interface Props {
  topic: ComplianceTopic;
}

const { topic } = Astro.props;
---

<div class="bg-white rounded-xl border border-veritiv-100 p-6 lg:p-8 hover:shadow-md transition-shadow duration-300" data-animate>
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0 w-12 h-12 bg-veritiv-50 rounded-lg flex items-center justify-center">
      <svg class="w-6 h-6 text-veritiv-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
      </svg>
    </div>
    <div class="flex-1">
      {topic.stat && (
        <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded-full bg-accent-50 text-accent-600 mb-2">
          {topic.stat}
        </span>
      )}
      <h3 class="text-lg font-semibold text-veritiv-900">{topic.title}</h3>
      <p class="mt-2 text-sm text-body-muted leading-relaxed">{topic.description}</p>
    </div>
  </div>
</div>
