---
import type { Locale } from '../../i18n/config';
import { t } from '../../i18n/utils';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const sectors = [
  {
    title: t(locale, 'sectors.medicalTitle'),
    description: t(locale, 'sectors.medicalDesc'),
    gradient: 'from-veritiv-900 to-veritiv-700',
  },
  {
    title: t(locale, 'sectors.electronicsTitle'),
    description: t(locale, 'sectors.electronicsDesc'),
    gradient: 'from-veritiv-800 to-veritiv-600',
  },
  {
    title: t(locale, 'sectors.automotiveTitle'),
    description: t(locale, 'sectors.automotiveDesc'),
    gradient: 'from-accent-700 to-accent-500',
  },
];
---

<section class="py-20 lg:py-28 bg-white">
  <Container>
    <SectionHeading
      title={t(locale, 'sectors.title')}
      subtitle={t(locale, 'sectors.subtitle')}
      tag={t(locale, 'sectors.tag')}
    />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {sectors.map((sector) => (
        <div
          class={`relative overflow-hidden rounded-2xl bg-gradient-to-br ${sector.gradient} p-8 lg:p-10 min-h-[280px] flex flex-col justify-end group`}
          data-animate
        >
          <!-- Subtle pattern -->
          <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;20&quot; height=&quot;20&quot; viewBox=&quot;0 0 20 20&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;0.4&quot;%3E%3Ccircle cx=&quot;1&quot; cy=&quot;1&quot; r=&quot;1&quot;/%3E%3C/g%3E%3C/svg%3E');"></div>

          <div class="relative z-10">
            <h3 class="text-2xl font-bold text-white mb-3">{sector.title}</h3>
            <p class="text-veritiv-100 text-sm leading-relaxed">{sector.description}</p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
