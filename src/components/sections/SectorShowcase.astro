---
import type { Locale } from '../../i18n/config';
import { t } from '../../i18n/utils';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const sectors = [
  {
    title: t(locale, 'sectors.medicalTitle'),
    description: t(locale, 'sectors.medicalDesc'),
    image: '/images/sections/industries-healthcare.jpg',
  },
  {
    title: t(locale, 'sectors.electronicsTitle'),
    description: t(locale, 'sectors.electronicsDesc'),
    image: '/images/sections/industries-electronics.jpg',
  },
  {
    title: t(locale, 'sectors.automotiveTitle'),
    description: t(locale, 'sectors.automotiveDesc'),
    image: '/images/sections/industries-automotive.jpg',
  },
  {
    title: t(locale, 'sectors.pharmaceuticalTitle'),
    description: t(locale, 'sectors.pharmaceuticalDesc'),
    image: 'https://images.unsplash.com/photo-1587854692152-cbe660dbde88?auto=format&fit=crop&w=800&q=80',
  },
  {
    title: t(locale, 'sectors.retailTitle'),
    description: t(locale, 'sectors.retailDesc'),
    image: 'https://images.unsplash.com/photo-1553413077-190dd305871c?auto=format&fit=crop&w=800&q=80',
  },
];
---

<section class="py-20 lg:py-28 bg-white">
  <Container>
    <SectionHeading
      title={t(locale, 'sectors.title')}
      subtitle={t(locale, 'sectors.subtitle')}
      tag={t(locale, 'sectors.tag')}
    />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {sectors.map((sector) => (
        <div
          class="relative overflow-hidden rounded-2xl min-h-[280px] flex flex-col justify-end group"
          data-animate
        >
          <!-- Background image -->
          <img
            src={sector.image}
            alt=""
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          />
          <!-- Dark overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-veritiv-900/90 via-veritiv-900/50 to-veritiv-900/30"></div>

          <div class="relative z-10 p-8 lg:p-10">
            <h3 class="text-2xl font-bold text-white mb-3">{sector.title}</h3>
            <p class="text-veritiv-100 text-sm leading-relaxed">{sector.description}</p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
