---
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';

interface Props {
  title: string;
  subtitle: string;
  cta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  compact?: boolean;
  image?: string;
}

const {
  title,
  subtitle,
  cta,
  secondaryCta,
  compact = false,
  image,
} = Astro.props;
---

<section
  class:list={[
    'relative overflow-hidden bg-veritiv-900',
    compact ? 'py-20 lg:py-28' : 'py-24 lg:py-36',
  ]}
>
  {image && (
    <div class="absolute inset-0">
      <img src={image} alt="" class="absolute inset-0 w-full h-full object-cover" />
      <div class="absolute inset-0 bg-veritiv-900/70"></div>
    </div>
  )}
  <Container class="relative z-10">
    <div class:list={['max-w-3xl', !compact && 'lg:max-w-4xl']}>
      <h1
        class:list={[
          'font-bold tracking-tight text-white',
          compact
            ? 'text-3xl sm:text-4xl lg:text-5xl'
            : 'text-4xl sm:text-5xl lg:text-6xl xl:text-7xl',
        ]}
      >
        <Fragment set:html={title} />
      </h1>

      <p
        class:list={[
          'mt-6 text-veritiv-200 leading-relaxed',
          compact ? 'text-lg max-w-xl' : 'text-lg lg:text-xl max-w-2xl',
        ]}
      >
        {subtitle}
      </p>

      {(cta || secondaryCta) && (
        <div class="mt-10 flex flex-wrap gap-4">
          {cta && (
            <Button href={cta.href} variant="primary" size="lg">
              {cta.text}
            </Button>
          )}
          {secondaryCta && (
            <Button href={secondaryCta.href} variant="white" size="lg">
              {secondaryCta.text}
            </Button>
          )}
        </div>
      )}
    </div>
  </Container>

  <!-- Bottom accent line -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-accent-500 via-accent-400 to-transparent"></div>
</section>
