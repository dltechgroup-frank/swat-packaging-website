---
import type { Locale } from '../../i18n/config';
import { t } from '../../i18n/utils';
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const stats = [
  { value: t(locale, 'about.globalStat1Value'), label: t(locale, 'about.globalStat1Label') },
  { value: t(locale, 'about.globalStat2Value'), label: t(locale, 'about.globalStat2Label') },
  { value: t(locale, 'about.globalStat3Value'), label: t(locale, 'about.globalStat3Label') },
  { value: t(locale, 'about.globalStat4Value'), label: t(locale, 'about.globalStat4Label') },
];
---

<section class="py-20 lg:py-28 bg-gradient-to-br from-veritiv-900 to-veritiv-800 relative overflow-hidden">
  <!-- Background world map image -->
  <div class="absolute inset-0">
    <img
      src="https://images.unsplash.com/photo-1526778548025-fa2f459cd5c1?auto=format&fit=crop&w=1920&q=80"
      alt=""
      class="absolute inset-0 w-full h-full object-cover opacity-20"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-veritiv-900/90 to-veritiv-800/80"></div>
  </div>

  <Container class="relative z-10">
    <!-- Header -->
    <div class="text-center mb-14" data-animate>
      <Badge text={t(locale, 'about.globalTag')} variant="accent" />
      <h2 class="mt-4 text-3xl sm:text-4xl lg:text-5xl font-bold text-white tracking-tight">
        {t(locale, 'about.globalTitle')}
      </h2>
      <p class="mt-4 text-lg text-veritiv-200 max-w-2xl mx-auto">
        {t(locale, 'about.globalSubtitle')}
      </p>
    </div>

    <!-- 4-stat grid -->
    <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-14" data-animate>
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-4xl lg:text-5xl font-bold text-white">
            {stat.value}
          </div>
          <p class="mt-2 text-sm text-veritiv-300 leading-snug">{stat.label}</p>
        </div>
      ))}
    </div>

    <!-- Description + Asia callout side by side -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-start" data-animate>
      <p class="text-veritiv-200 leading-relaxed text-base lg:text-lg">
        {t(locale, 'about.globalDesc')}
      </p>

      <!-- Asia callout card -->
      <div class="bg-white/10 rounded-xl p-6 backdrop-blur-sm border border-white/10">
        <h3 class="text-lg font-semibold text-white mb-2">
          {t(locale, 'about.globalAsiaTitle')}
        </h3>
        <p class="text-veritiv-200 text-sm leading-relaxed">
          {t(locale, 'about.globalAsiaDesc')}
        </p>
      </div>
    </div>
  </Container>
</section>
