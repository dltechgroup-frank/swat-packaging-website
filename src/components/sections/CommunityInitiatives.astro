---
import type { Locale } from '../../i18n/config';
import { t } from '../../i18n/utils';
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const pillars = [
  {
    title: t(locale, 'about.community1Title'),
    desc: t(locale, 'about.community1Desc'),
    // Heart icon (Heroicons solid)
    iconPath: 'M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z',
  },
  {
    title: t(locale, 'about.community2Title'),
    desc: t(locale, 'about.community2Desc'),
    // Users icon (Heroicons solid)
    iconPath: 'M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v1h8v-1zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-1a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v1h-3zM4.75 12.094A5.973 5.973 0 004 15v1H1v-1a3 3 0 013.75-2.906z',
  },
  {
    title: t(locale, 'about.community3Title'),
    desc: t(locale, 'about.community3Desc'),
    // Home icon (Heroicons solid)
    iconPath: 'M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z',
  },
];
---

<section class="py-20 lg:py-28 bg-white">
  <Container>
    <!-- Header -->
    <div class="text-center mb-14" data-animate>
      <Badge text={t(locale, 'about.communityTag')} variant="teal" />
      <h2 class="mt-4 text-3xl sm:text-4xl lg:text-5xl font-bold text-veritiv-900 tracking-tight">
        {t(locale, 'about.communityTitle')}
      </h2>
      <p class="mt-4 text-lg text-body-muted max-w-2xl mx-auto">
        {t(locale, 'about.communityDesc')}
      </p>
    </div>

    <!-- 3-pillar card grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {pillars.map((pillar) => (
        <div
          class="bg-surface-light rounded-2xl p-6 border border-veritiv-100 flex flex-col gap-4"
          data-animate
        >
          <!-- Icon -->
          <div class="w-12 h-12 rounded-xl bg-accent-500/10 flex items-center justify-center flex-shrink-0">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 text-accent-500"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path d={pillar.iconPath} />
            </svg>
          </div>

          <div>
            <h3 class="text-lg font-semibold text-veritiv-900 mb-2">{pillar.title}</h3>
            <p class="text-sm text-body-muted leading-relaxed">{pillar.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
