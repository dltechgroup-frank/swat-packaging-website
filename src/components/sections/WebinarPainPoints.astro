---
import type { Locale } from '../../i18n/config';
import { t } from '../../i18n/utils';
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const painPoints = [
  {
    title: t(locale, 'webinar.pain1Title'),
    desc: t(locale, 'webinar.pain1Desc'),
    solution: t(locale, 'webinar.pain1Solution'),
    problemIcon: 'M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z',
  },
  {
    title: t(locale, 'webinar.pain2Title'),
    desc: t(locale, 'webinar.pain2Desc'),
    solution: t(locale, 'webinar.pain2Solution'),
    problemIcon: 'M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z',
  },
  {
    title: t(locale, 'webinar.pain3Title'),
    desc: t(locale, 'webinar.pain3Desc'),
    solution: t(locale, 'webinar.pain3Solution'),
    problemIcon: 'M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z',
  },
  {
    title: t(locale, 'webinar.pain4Title'),
    desc: t(locale, 'webinar.pain4Desc'),
    solution: t(locale, 'webinar.pain4Solution'),
    problemIcon: 'M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z',
  },
];
---

<section class="py-16 lg:py-24 bg-white">
  <Container>
    <div class="text-center mb-12" data-animate>
      <Badge>{t(locale, 'webinar.painTag')}</Badge>
      <h2 class="mt-4 text-3xl lg:text-4xl font-bold text-veritiv-900">
        {t(locale, 'webinar.painTitle')}
      </h2>
    </div>

    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
      {painPoints.map((point) => (
        <div class="rounded-xl overflow-hidden border border-veritiv-200 hover:shadow-lg transition-all" data-animate>
          <!-- Problem zone -->
          <div class="bg-red-50 p-5 border-b border-red-100">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-red-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={point.problemIcon} />
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-veritiv-900 text-sm leading-snug">{point.title}</h3>
                <p class="mt-1 text-xs text-red-700/70 leading-relaxed">{point.desc}</p>
              </div>
            </div>
          </div>
          <!-- Gradient divider -->
          <div class="h-[2px] bg-gradient-to-r from-red-300 via-veritiv-200 to-emerald-300"></div>
          <!-- Solution zone -->
          <div class="bg-emerald-50 p-5">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-emerald-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-emerald-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <span class="inline-block text-xs font-bold text-emerald-700 uppercase tracking-wide mb-1">
                  {locale === 'es' ? 'Metodo SWAT' : 'SWAT Method'}
                </span>
                <p class="text-xs text-emerald-800/80 leading-relaxed">{point.solution}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
