// Split logos into two rows for a richer carousel effect
const midpoint = Math.ceil(logos.length / 2);
const row1 = logos.slice(0, midpoint);
const row2 = logos.slice(midpoint);
---

<section class="py-16 lg:py-20 bg-white">
  <Container>
    <div class="text-center mb-10" data-animate>
      <Badge>{t(locale, 'webinar.socialTag')}</Badge>
      <h2 class="mt-4 text-2xl lg:text-3xl font-bold text-veritiv-900">
        {t(locale, 'webinar.socialTitle')}
      </h2>
    </div>

    <!-- Stats row -->
    <div class="max-w-5xl mx-auto grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 mb-10" data-animate>
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-3xl lg:text-4xl font-bold text-accent-500">{stat.value}</div>
          <p class="mt-1 text-xs lg:text-sm text-body-muted">{stat.label}</p>
        </div>
      ))}
    </div>

    <!-- Certifications -->
    <div class="flex flex-wrap items-center justify-center gap-4" data-animate>
      {certifications.map((cert) => (
        <div class="flex items-center gap-2 px-4 py-2 bg-surface-light rounded-full border border-veritiv-100">
          <svg class="w-4 h-4 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
