---
import type { Locale } from '../../i18n/config';
import { t } from '../../i18n/utils';
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const stats = [
  { value: t(locale, 'webinar.socialStat1'), label: t(locale, 'webinar.socialStat1Label') },
  { value: t(locale, 'webinar.socialStat2'), label: t(locale, 'webinar.socialStat2Label') },
  { value: t(locale, 'webinar.socialStat3'), label: t(locale, 'webinar.socialStat3Label') },
];

const certifications = [
  t(locale, 'webinar.socialCert1'),
  t(locale, 'webinar.socialCert2'),
  t(locale, 'webinar.socialCert3'),
];
---

<section class="py-16 lg:py-20 bg-white">
  <Container>
    <div class="text-center mb-10" data-animate>
      <Badge>{t(locale, 'webinar.socialTag')}</Badge>
      <h2 class="mt-4 text-2xl lg:text-3xl font-bold text-veritiv-900">
        {t(locale, 'webinar.socialTitle')}
      </h2>
    </div>

    <!-- Stats row -->
    <div class="max-w-3xl mx-auto grid grid-cols-3 gap-6 mb-10" data-animate>
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-3xl lg:text-4xl font-bold text-accent-500">{stat.value}</div>
          <p class="mt-1 text-xs lg:text-sm text-body-muted">{stat.label}</p>
        </div>
      ))}
    </div>

    <!-- Certifications -->
    <div class="flex flex-wrap items-center justify-center gap-4" data-animate>
      {certifications.map((cert) => (
        <div class="flex items-center gap-2 px-4 py-2 bg-surface-light rounded-full border border-veritiv-100">
          <svg class="w-4 h-4 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
          </svg>
          <span class="text-sm font-medium text-veritiv-700">{cert}</span>
        </div>
      ))}
    </div>

    <!-- Logo placeholders -->
    <div class="mt-10 flex flex-wrap items-center justify-center gap-8 opacity-40" data-animate>
      {[1, 2, 3, 4, 5, 6].map(() => (
        <div class="w-24 h-12 bg-veritiv-200 rounded-lg flex items-center justify-center">
          <span class="text-xs text-veritiv-400 font-medium">Logo</span>
        </div>
      ))}
    </div>
  </Container>
</section>
