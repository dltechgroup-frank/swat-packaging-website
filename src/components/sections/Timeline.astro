---
import Container from '../ui/Container.astro';

const milestones = [
  {
    year: '1995',
    title: 'Founded in the CaliBaja Region',
    description: 'Established packaging operations in the Tijuana-San Diego corridor to serve the emerging maquiladora industry.',
  },
  {
    year: '2005',
    title: 'Advanced Engineering Division',
    description: 'Transitioned from basic assembly to full packaging engineering with CAD design and thermal testing capabilities.',
  },
  {
    year: '2015',
    title: 'ISO 13485 Certification',
    description: 'Achieved medical device packaging certification, opening doors to Tijuana\'s growing biomedical cluster.',
  },
  {
    year: '2020',
    title: 'Industry 4.0 Integration',
    description: 'Deployed AI-driven automation and RFID smart labeling systems across our production facilities.',
  },
  {
    year: '2024',
    title: 'Veritiv Acquisition',
    description: 'Joined the Veritiv family through the Orora Packaging Solutions acquisition, combining local agility with global scale.',
  },
  {
    year: '2026',
    title: 'SWAT Packaging Team',
    description: 'Rebranded as the SWAT Packaging Team â€” an agile, high-impact tactical unit for cross-border packaging challenges.',
  },
];
---

<section class="py-20 lg:py-28 bg-surface-light">
  <Container>
    <div class="text-center mb-16" data-animate>
      <span class="inline-block px-3 py-1 text-xs font-semibold uppercase tracking-wider rounded-full bg-accent-50 text-accent-600 mb-4">
        Our Heritage
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-veritiv-900 tracking-tight">
        30 Years of Industrial Evolution
      </h2>
    </div>

    <div class="relative">
      <!-- Vertical line -->
      <div class="absolute left-4 lg:left-1/2 top-0 bottom-0 w-px bg-veritiv-200 lg:-translate-x-px"></div>

      <div class="space-y-12">
        {milestones.map((milestone, i) => (
          <div
            class:list={[
              'relative flex items-start gap-8 lg:gap-0',
              i % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse',
            ]}
            data-animate
          >
            <!-- Dot -->
            <div class="absolute left-4 lg:left-1/2 w-3 h-3 bg-accent-500 rounded-full ring-4 ring-surface-light -translate-x-1.5 lg:-translate-x-1.5 mt-1.5"></div>

            <!-- Content -->
            <div class:list={['ml-12 lg:ml-0 lg:w-1/2', i % 2 === 0 ? 'lg:pr-16 lg:text-right' : 'lg:pl-16']}>
              <span class="text-sm font-bold text-accent-500">{milestone.year}</span>
              <h3 class="text-lg font-semibold text-veritiv-900 mt-1">{milestone.title}</h3>
              <p class="text-sm text-body-muted mt-2 leading-relaxed">{milestone.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </Container>
</section>
