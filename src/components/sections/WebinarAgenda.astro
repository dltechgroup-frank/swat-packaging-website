---
import type { Locale } from '../../i18n/config';
import { t } from '../../i18n/utils';
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const modules = [
  {
    number: '01',
    hook: t(locale, 'webinar.module1Hook'),
    objective: t(locale, 'webinar.module1Objective'),
    icon: 'M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z',
  },
  {
    number: '02',
    hook: t(locale, 'webinar.module2Hook'),
    objective: t(locale, 'webinar.module2Objective'),
    icon: 'M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z',
  },
  {
    number: '03',
    hook: t(locale, 'webinar.module3Hook'),
    objective: t(locale, 'webinar.module3Objective'),
    icon: 'M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418',
  },
];
---

<section class="py-16 lg:py-24 bg-white">
  <Container>
    <div class="text-center mb-12" data-animate>
      <Badge>{t(locale, 'webinar.promiseTag')}</Badge>
      <h2 class="mt-4 text-3xl lg:text-4xl font-bold text-veritiv-900">
        {t(locale, 'webinar.promiseTitle')}
      </h2>
    </div>

    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-6">
      {modules.map((mod) => (
        <div class="relative bg-surface-light rounded-2xl p-6 border border-veritiv-100 hover:border-accent-300 hover:shadow-lg transition-all" data-animate>
          <!-- Module number -->
          <div class="flex items-center gap-3 mb-4">
            <span class="w-10 h-10 rounded-full bg-accent-500 text-white text-sm font-bold flex items-center justify-center">
              {mod.number}
            </span>
            <svg class="w-6 h-6 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={mod.icon} />
            </svg>
          </div>

          <!-- Hook (emotional teaser) -->
          <h3 class="font-bold text-veritiv-900 text-lg leading-snug mb-3">
            {mod.hook}
          </h3>

          <!-- Divider -->
          <div class="w-12 h-0.5 bg-accent-300 mb-3"></div>

          <!-- Objective (concrete outcome) -->
          <p class="text-sm text-body-muted leading-relaxed">
            <span class="font-semibold text-accent-600">{locale === 'es' ? 'Aprender√°s:' : "You'll learn:"}</span> {mod.objective}
          </p>
        </div>
      ))}
    </div>
  </Container>
</section>
