---

<section class="py-16 lg:py-24 bg-white">
  <Container>
    <div class="text-center mb-12" data-animate>
      <Badge>{t(locale, 'webinar.agendaTag')}</Badge>
      <h2 class="mt-4 text-3xl lg:text-4xl font-bold text-veritiv-900">
        {t(locale, 'webinar.agendaTitle')}
      </h2>
    </div>

    <div class="max-w-3xl mx-auto">
      <div class="relative">
        <!-- Vertical line -->
        <div class="absolute left-6 top-0 bottom-0 w-0.5 bg-veritiv-100" aria-hidden="true"></div>

        <!-- Timeline items -->
        <div class="space-y-8">
          {agendaItems.map((item, index) => (
            <div class="relative pl-16" data-animate>
              <!-- Circle with icon -->
              <div class="absolute left-0 w-12 h-12 bg-accent-50 rounded-full flex items-center justify-center border-4 border-white shadow-sm">
                <svg class="w-5 h-5 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={item.icon} />
                </svg>
              </div>

              <!-- Content card -->
              <div class="bg-surface-light rounded-xl p-5 border border-veritiv-100 hover:border-accent-200 transition-colors">
                <div class="flex items-start gap-3">
                  <span class="flex-shrink-0 w-6 h-6 rounded-full bg-accent-500 text-white text-xs font-bold flex items-center justify-center">
                    {index + 1}
                  </span>
                  <div>
                    <h3 class="font-semibold text-veritiv-900 mb-1">{item.title}</h3>
                    <p class="text-sm text-body-muted leading-relaxed">{item.desc}</p>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </Container>
</section>
