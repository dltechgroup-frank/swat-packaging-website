---
import type { Locale } from '../../i18n/config';
import { t } from '../../i18n/utils';
import Container from '../ui/Container.astro';
import WebinarForm from './WebinarForm.astro';
import CountdownTimer from '../react/CountdownTimer';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const countdownLabels = {
  days: t(locale, 'webinar.countdownDays'),
  hours: t(locale, 'webinar.countdownHours'),
  minutes: t(locale, 'webinar.countdownMinutes'),
  seconds: t(locale, 'webinar.countdownSeconds'),
};
---

<section class="relative overflow-hidden py-10 lg:py-36" style="background-color: #01555B;">
  <!-- Background image with gradient fade -->
  <div class="absolute inset-0" aria-hidden="true">
    <!-- Mobile: Fabian background -->
    <img src="/images/fabian_background.jpeg" alt="" class="absolute inset-0 w-full h-full object-cover lg:hidden" loading="eager" />
    <!-- Desktop: Speakers group -->
    <img src="/images/webinar_hero.jpeg" alt="" class="absolute inset-0 w-full h-full object-cover hidden lg:block" loading="eager" />
    <div class="absolute inset-0" style="background: linear-gradient(to right, rgba(1,85,91,0.92) 0%, rgba(1,85,91,0.75) 50%, rgba(1,85,91,0.3) 100%);"></div>
  </div>

  <Container>
    <div class="relative grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <!-- Left column: Event info -->
      <div>
        <!-- Live badge -->
        <span class="inline-block mb-6 px-4 py-1.5 rounded-full text-xs font-semibold uppercase tracking-wider" style="background-color: rgba(255, 103, 0, 0.2); color: #FF6700;">
          {t(locale, 'webinar.badge')}
        </span>

        <!-- Title — large bold, matching carousel style -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-white leading-tight" set:html={t(locale, 'webinar.heroTitle')} />

        <!-- Date header — highlighted -->
        <h2 class="mt-4 text-2xl sm:text-3xl font-bold">
          <span class="px-3 py-1 rounded" style="background-color: #FF6700; color: white;">{t(locale, 'webinar.date')}</span>
        </h2>

        <!-- Subtitle -->
        <p class="mt-6 text-lg lg:text-xl leading-relaxed max-w-2xl" style="color: #A5C2C9;">
          {t(locale, 'webinar.heroSubtitle')}
        </p>

        <!-- Webinar intro video -->
        <div class="video-wrapper group mt-8 aspect-video rounded-xl overflow-hidden shadow-lg border border-white/10 relative">
          <video
            src="/videos/webinar_intro.mp4"
            autoplay
            muted
            loop
            playsinline
            controls
            preload="metadata"
            class="w-full h-full object-cover"
          ></video>
        </div>

        <!-- Event details row -->
        <div class="flex flex-wrap items-center gap-4 mt-8 text-sm" style="color: #A5C2C9;">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{t(locale, 'webinar.time')}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5l4.72-4.72a.75.75 0 011.28.53v11.38a.75.75 0 01-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 002.25-2.25v-9a2.25 2.25 0 00-2.25-2.25h-9A2.25 2.25 0 002.25 7.5v9a2.25 2.25 0 002.25 2.25z" />
            </svg>
            <span>{t(locale, 'webinar.platform')}</span>
          </div>
        </div>

        <!-- Countdown timer -->
        <div class="mt-8">
          <CountdownTimer
            client:load
            targetDate="2026-04-10T23:59:59-07:00"
            labels={countdownLabels}
            eventLiveText={t(locale, 'webinar.eventLive')}
          />
        </div>

        <!-- Urgency indicators -->
        <div class="flex flex-wrap items-center gap-4 mt-6 text-sm">
          <div class="flex items-center gap-2 px-3 py-1.5 rounded-full" style="background-color: rgba(255, 103, 0, 0.15);">
            <svg class="w-4 h-4" style="color: #FF6700;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
            </svg>
            <span style="color: #FF6700;" class="font-medium">{t(locale, 'webinar.registrationCloses')}</span>
          </div>
          <div class="flex items-center gap-2" style="color: #A5C2C9;">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
            </svg>
            <span>{t(locale, 'webinar.limitedSpots')}</span>
          </div>
        </div>
      </div>

      <!-- Right column: Form -->
      <div class="lg:relative">
        <WebinarForm locale={locale} />
      </div>
    </div>
  </Container>
</section>

<style>
  .video-wrapper {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .video-wrapper:hover {
    transform: scale(1.02);
    box-shadow: 0 0 30px rgba(255, 103, 0, 0.25);
  }
</style>
