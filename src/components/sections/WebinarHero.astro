---
import type { Locale } from '../../i18n/config';
import { t } from '../../i18n/utils';
import Container from '../ui/Container.astro';
import WebinarForm from './WebinarForm.astro';
import CountdownTimer from '../react/CountdownTimer';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const countdownLabels = {
  days: t(locale, 'webinar.countdownDays'),
  hours: t(locale, 'webinar.countdownHours'),
  minutes: t(locale, 'webinar.countdownMinutes'),
  seconds: t(locale, 'webinar.countdownSeconds'),
};
---

<section class="relative overflow-hidden py-16 lg:py-24" style="background-color: #00313C;">
  <!-- Packaging industry background -->
  <div class="absolute inset-0" aria-hidden="true">
    <!-- Gradient overlay -->
    <div class="absolute inset-0" style="background: radial-gradient(ellipse at 20% 50%, rgba(255,103,0,0.08) 0%, transparent 60%), radial-gradient(ellipse at 80% 20%, rgba(165,194,201,0.06) 0%, transparent 50%);"></div>
    <!-- Packaging SVG pattern -->
    <svg class="absolute inset-0 w-full h-full opacity-[0.04]" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="pkg-pattern" x="0" y="0" width="200" height="200" patternUnits="userSpaceOnUse">
          <!-- Open box top -->
          <path d="M30 80 L60 65 L90 80 L60 95Z" fill="none" stroke="white" stroke-width="1.2"/>
          <path d="M60 65 L60 35 L30 50 L30 80" fill="none" stroke="white" stroke-width="1.2"/>
          <path d="M60 65 L60 35 L90 50 L90 80" fill="none" stroke="white" stroke-width="1.2"/>
          <!-- Box flap left -->
          <path d="M30 50 L45 35 L60 35" fill="none" stroke="white" stroke-width="0.8"/>
          <!-- Box flap right -->
          <path d="M90 50 L75 35 L60 35" fill="none" stroke="white" stroke-width="0.8"/>
          <!-- Sealed box -->
          <path d="M130 140 L160 125 L190 140 L160 155Z" fill="none" stroke="white" stroke-width="1.2"/>
          <path d="M130 140 L130 110 L160 95 L160 125" fill="none" stroke="white" stroke-width="1.2"/>
          <path d="M190 140 L190 110 L160 95 L160 125" fill="none" stroke="white" stroke-width="1.2"/>
          <!-- Tape line on sealed box -->
          <path d="M160 95 L160 125" stroke="white" stroke-width="0.6" stroke-dasharray="3,2"/>
          <path d="M145 102 L175 102" stroke="white" stroke-width="0.6"/>
          <!-- Shipping arrows -->
          <path d="M120 50 L140 50" stroke="white" stroke-width="0.8"/>
          <path d="M136 46 L140 50 L136 54" fill="none" stroke="white" stroke-width="0.8"/>
          <path d="M120 60 L140 60" stroke="white" stroke-width="0.8"/>
          <path d="M136 56 L140 60 L136 64" fill="none" stroke="white" stroke-width="0.8"/>
          <!-- Recycle symbol (simplified) -->
          <circle cx="25" cy="150" r="12" fill="none" stroke="white" stroke-width="0.8"/>
          <path d="M19 145 L25 138 L31 145" fill="none" stroke="white" stroke-width="0.8"/>
          <path d="M31 155 L25 162 L19 155" fill="none" stroke="white" stroke-width="0.8"/>
          <path d="M17 152 L17 148" stroke="white" stroke-width="0.8"/>
          <path d="M33 148 L33 152" stroke="white" stroke-width="0.8"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#pkg-pattern)" />
    </svg>
    <!-- Floating decorative elements -->
    <div class="absolute top-10 right-10 w-32 h-32 rounded-full opacity-[0.03]" style="background: #FF6700; filter: blur(40px);"></div>
    <div class="absolute bottom-20 left-10 w-48 h-48 rounded-full opacity-[0.03]" style="background: #A5C2C9; filter: blur(60px);"></div>
  </div>

  <Container>
    <div class="relative grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <!-- Left column: Event info -->
      <div class="lg:sticky lg:top-24">
        <!-- Live badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-6" style="background-color: rgba(255, 103, 0, 0.2);">
          <span class="w-2 h-2 rounded-full animate-pulse" style="background-color: #FF6700;"></span>
          <span class="text-xs font-semibold uppercase tracking-wider" style="color: #FF6700;">
            {t(locale, 'webinar.badge')}
          </span>
        </div>

        <!-- Title -->
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight mb-4">
          {t(locale, 'webinar.heroTitle')}
        </h1>

        <p class="text-base lg:text-lg font-medium mb-8 leading-relaxed" style="color: #A5C2C9;">
          {t(locale, 'webinar.heroSubtitle')}
        </p>

        <!-- Webinar intro video -->
        <div class="video-wrapper group mb-8 aspect-video rounded-xl overflow-hidden shadow-lg border border-white/10 relative">
          <video
            src="/videos/webinar_intro.mp4"
            controls
            playsinline
            preload="metadata"
            class="w-full h-full object-cover"
          ></video>
        </div>

        <!-- Event details -->
        <div class="flex flex-wrap items-center gap-4 mb-8 text-sm" style="color: #A5C2C9;">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
            </svg>
            <span>{t(locale, 'webinar.date')}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{t(locale, 'webinar.time')}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5l4.72-4.72a.75.75 0 011.28.53v11.38a.75.75 0 01-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 002.25-2.25v-9a2.25 2.25 0 00-2.25-2.25h-9A2.25 2.25 0 002.25 7.5v9a2.25 2.25 0 002.25 2.25z" />
            </svg>
            <span>{t(locale, 'webinar.platform')}</span>
          </div>
        </div>

        <!-- Countdown timer -->
        <div class="mb-8">
          <CountdownTimer
            client:load
            targetDate="2026-03-14T10:00:00-08:00"
            labels={countdownLabels}
            eventLiveText={t(locale, 'webinar.eventLive')}
          />
        </div>

        <!-- Urgency indicators -->
        <div class="flex flex-wrap items-center gap-4 text-sm">
          <div class="flex items-center gap-2 px-3 py-1.5 rounded-full" style="background-color: rgba(255, 103, 0, 0.15);">
            <svg class="w-4 h-4" style="color: #FF6700;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
            </svg>
            <span style="color: #FF6700;" class="font-medium">{t(locale, 'webinar.registrationCloses')}</span>
          </div>
          <div class="flex items-center gap-2" style="color: #A5C2C9;">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
            </svg>
            <span>{t(locale, 'webinar.limitedSpots')}</span>
          </div>
        </div>
      </div>

      <!-- Right column: Form -->
      <div class="lg:relative">
        <WebinarForm locale={locale} />
      </div>
    </div>
  </Container>
</section>

<style>
  .video-wrapper {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .video-wrapper:hover {
    transform: scale(1.02);
    box-shadow: 0 0 30px rgba(255, 103, 0, 0.25);
  }
</style>
