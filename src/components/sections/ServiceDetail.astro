---
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';
import type { Service } from '../../data/services';

interface Props {
  service: Service;
  index: number;
}

const { service, index } = Astro.props;
const isEven = index % 2 === 0;
---

<section
  id={service.slug}
  class:list={[
    'py-16 lg:py-20 scroll-mt-24',
    isEven ? 'bg-white' : 'bg-surface-light',
  ]}
>
  <Container>
    <div class:list={['grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center', !isEven && 'lg:grid-flow-dense']}>
      <!-- Content -->
      <div class:list={[!isEven && 'lg:col-start-2']} data-animate>
        <div class="flex items-center gap-3 mb-4">
          {service.badge && <Badge text={service.badge} variant="green" />}
          <span class="text-xs text-veritiv-400 font-medium uppercase tracking-wider">
            {service.sectors.map(s => s.charAt(0).toUpperCase() + s.slice(1)).join(' Â· ')}
          </span>
        </div>

        <h2 class="text-2xl sm:text-3xl font-bold text-veritiv-900 tracking-tight">
          {service.title}
        </h2>

        <p class="mt-4 text-body-muted leading-relaxed">
          {service.fullDescription}
        </p>

        <ul class="mt-6 space-y-3">
          {service.features.map((feature) => (
            <li class="flex items-start gap-3 text-sm text-body-muted">
              <svg class="w-5 h-5 mt-0.5 text-accent-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span>{feature}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Visual -->
      <div class:list={[!isEven && 'lg:col-start-1']} data-animate>
        <div class="bg-gradient-to-br from-veritiv-50 to-veritiv-100 rounded-2xl aspect-[4/3] flex items-center justify-center">
          <div class="w-20 h-20 bg-accent-50 rounded-2xl flex items-center justify-center">
            <svg class="w-10 h-10 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m8.25 3v6.75m0 0l-3-3m3 3l3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
