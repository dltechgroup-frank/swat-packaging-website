---
interface Props {
  light?: boolean;
}

const { light = false } = Astro.props;
---

<div class="flex items-center gap-2" data-animate>
  <div
    class:list={[
      'h-px flex-1 max-w-16',
      light ? 'bg-veritiv-600' : 'bg-veritiv-200',
    ]}
  />
  <span
    class:list={[
      'text-xs font-medium uppercase tracking-widest',
      light ? 'text-accent-400' : 'text-accent-500',
    ]}
  >
    A Division of Veritiv Landsberg
  </span>
  <div
    class:list={[
      'h-px flex-1 max-w-16',
      light ? 'bg-veritiv-600' : 'bg-veritiv-200',
    ]}
  />
</div>
