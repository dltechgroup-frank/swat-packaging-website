---
import { siteConfig } from '../../data/siteConfig';
import type { Locale } from '../../i18n/config';
import { t, localizeHref } from '../../i18n/utils';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;

const navItems = [
  { label: t(locale, 'nav.home'), href: localizeHref(locale, '/') },
  { label: t(locale, 'nav.about'), href: localizeHref(locale, '/about') },
  { label: t(locale, 'nav.services'), href: localizeHref(locale, '/services') },
  { label: t(locale, 'nav.compliance'), href: localizeHref(locale, '/compliance') },
  { label: t(locale, 'nav.audit'), href: localizeHref(locale, '/audit') },
  { label: t(locale, 'nav.contact'), href: localizeHref(locale, '/contact') },
];
---

<footer class="bg-veritiv-900 text-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <img
          src="/images/swat-logo.png"
          alt="SWAT Packaging Team"
          class="h-12 w-auto brightness-0 invert mb-4"
        />
        <p class="text-veritiv-300 text-sm leading-relaxed max-w-md mb-6">
          {t(locale, 'footer.description')}
        </p>
        <p class="text-accent-400 text-xs font-medium uppercase tracking-wider">
          {t(locale, 'common.veritivBadge')}
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-veritiv-300 mb-4">
          {t(locale, 'footer.navHeading')}
        </h3>
        <ul class="space-y-3">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-veritiv-200 hover:text-accent-400 transition-colors duration-200"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-veritiv-300 mb-4">
          {t(locale, 'footer.contactHeading')}
        </h3>
        <ul class="space-y-3 text-sm text-veritiv-200">
          <li>
            <a href={`mailto:${siteConfig.email}`} class="hover:text-accent-400 transition-colors duration-200">
              {siteConfig.email}
            </a>
          </li>
          <li>
            <a href="tel:+5216631107814" class="hover:text-accent-400 transition-colors duration-200">
              +52 (663) 110-7814
            </a>
          </li>
          <li class="pt-2 text-veritiv-400">
            <Fragment set:html={t(locale, 'footer.location').replace('\n', '<br />')} />
