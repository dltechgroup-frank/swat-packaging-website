---
import { navItems } from '../../data/navigation';
import { siteConfig } from '../../data/siteConfig';
---

<footer class="bg-veritiv-900 text-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <img
          src="/images/swat-logo.png"
          alt="SWAT Packaging Team"
          class="h-12 w-auto brightness-0 invert mb-4"
        />
        <p class="text-veritiv-300 text-sm leading-relaxed max-w-md mb-6">
          Cross-border industrial packaging solutions engineered for the CaliBaja
          MegaRegion. 30+ years of expertise serving Medical Device, Electronics,
          and Automotive manufacturers.
        </p>
        <p class="text-accent-400 text-xs font-medium uppercase tracking-wider">
          A Division of Veritiv Landsberg
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-veritiv-300 mb-4">
          Navigation
        </h3>
        <ul class="space-y-3">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-veritiv-200 hover:text-accent-400 transition-colors duration-200"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-veritiv-300 mb-4">
          Contact
        </h3>
        <ul class="space-y-3 text-sm text-veritiv-200">
          <li>
            <a href={`mailto:${siteConfig.email}`} class="hover:text-accent-400 transition-colors duration-200">
              {siteConfig.email}
            </a>
          </li>
          <li>
            <a href={`tel:${siteConfig.phone}`} class="hover:text-accent-400 transition-colors duration-200">
              {siteConfig.phone}
            </a>
          </li>
          <li class="pt-2 text-veritiv-400">
            Tijuana, B.C., Mexico<br />
            San Diego, CA, USA
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-veritiv-800 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-xs text-veritiv-400">
        &copy; {new Date().getFullYear()} SWAT Packaging Team. All rights reserved.
      </p>
      <p class="text-xs text-veritiv-500">
        Veritiv Landsberg &middot; Packaging Solutions
      </p>
    </div>
  </div>
</footer>
