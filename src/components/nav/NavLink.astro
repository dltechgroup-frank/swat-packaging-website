---
interface Props {
  href: string;
  label: string;
  isActive?: boolean;
  class?: string;
}

const { href, label, isActive = false, class: className = '' } = Astro.props;
---

<a
  href={href}
  class:list={[
    'text-sm font-medium transition-colors duration-200',
    isActive
      ? 'text-accent-500'
      : 'text-veritiv-700 hover:text-accent-500',
    className,
  ]}
  aria-current={isActive ? 'page' : undefined}
>
  {label}
</a>
