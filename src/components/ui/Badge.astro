---
interface Props {
  text?: string;
  variant?: 'green' | 'teal' | 'neutral' | 'accent';
}

const { text, variant = 'green' } = Astro.props;

const variants = {
  green: 'bg-accent-50 text-accent-600',
  teal: 'bg-veritiv-50 text-veritiv-600',
  neutral: 'bg-slate-100 text-slate-600',
  accent: 'bg-accent-500/20 text-accent-400',
};
---

<span
  class:list={[
    'inline-flex px-3 py-1 text-xs font-semibold uppercase tracking-wider rounded-full',
    variants[variant],
  ]}
>
  {text ?? <slot />}
</span>
